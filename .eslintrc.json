{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:functional/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },

  "parser": "babel-eslint",
  "rules": {
    "functional/functional-parameters": "off"
  },
  "plugins": ["functional", "babel"],
  "overrides": [
    {
      "files": ["*.actions.js"],
      "rules": {
        "functional/no-expression-statement": "off"
      }
    }
  ]
}
